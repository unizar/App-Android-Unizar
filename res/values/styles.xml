<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="Estilo_Unizar">
        <item name="android:background">@drawable/fondo2</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:typeface">sans</item>
        
    </style>
    <style name="textoH1" parent="AppBaseTheme">
        <item name="android:textColor">#5390ed</item>
        <item name="android:textSize">15pt</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="textoH2" parent="AppBaseTheme">
        <item name="android:paddingTop">0dp</item>
        <item name="android:textSize">10pt</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>
	<style name="texto" parent="AppBaseTheme">
        <item name="android:textColor">#5390ed</item>
        <item name="android:textSize">10pt</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="boton">
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@color/azulFondo</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
     <style name="texto_Checkbox" parent="AppBaseTheme">
        <item name="android:paddingTop">0dp</item>
        <item name="android:textSize">10pt</item>
        <item name="android:textColor">#5390ed</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="textoRojo" parent="AppBaseTheme">
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">10pt</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>
    <color name="azulFondo">#2d6898</color>
</resources>
